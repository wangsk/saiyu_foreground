<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.saiyu.foreground.ui.views.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="充值成功截图:"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/iv_recharge_success_show"
                    android:layout_toRightOf="@id/tv_1"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/border_colorline_radius"/>

                <Button
                    android:id="@+id/btn_success_upload"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:layout_toRightOf="@id/iv_recharge_success_show"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_bg_blue_light"
                    android:gravity="center"
                    android:text="上传图片"
                    android:textSize="15sp"
                    android:textColor="@color/blue"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="充值明细截图:"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/iv_recharge_info_show"
                    android:layout_toRightOf="@id/tv_2"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/border_colorline_radius"/>

                <Button
                    android:id="@+id/btn_info_upload"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:layout_toRightOf="@id/iv_recharge_info_show"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_bg_blue_light"
                    android:gravity="center"
                    android:text="上传图片"
                    android:textSize="15sp"
                    android:textColor="@color/blue"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="消费记录截图:"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/iv_record_show"
                    android:layout_toRightOf="@id/tv_3"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/border_colorline_radius"/>
                <Button
                    android:id="@+id/btn_record_upload"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:layout_toRightOf="@id/iv_record_show"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_bg_blue_light"
                    android:gravity="center"
                    android:text="上传图片"
                    android:textSize="15sp"
                    android:textColor="@color/blue"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white">
                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="具体充值时间:"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_time_show"
                    android:layout_toRightOf="@id/tv_4"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="点击添加时间"
                    android:textSize="12sp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/black80"
                    android:background="@drawable/border_colorline_radius"/>

                <Button
                    android:id="@+id/btn_time"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:layout_toRightOf="@id/tv_time_show"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_bg_blue_light"
                    android:gravity="center"
                    android:text="现在时间"
                    android:textSize="15sp"
                    android:textColor="@color/blue"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="确认收货方式"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_selector_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_averagetime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="提交截图后，等待买家给我确认，平均确认时间:0天0小时0分钟"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/mem_info_icon"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_selector_3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="客服代理确认"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="(推荐)"
                    android:textSize="15sp"
                    android:textColor="@color/red"/>

                <ImageView
                    android:id="@+id/iv_3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/mem_info_icon"
                    android:visibility="invisible"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_selector_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="使用验图待确认方式，提交充值账号密码给客服，验图后直接确认"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/mem_info_icon"
                    android:visibility="invisible"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_bg_blue"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="完成充值，提交审核"
                android:textColor="@color/white" />

        </LinearLayout>
    </com.saiyu.foreground.ui.views.ReboundScrollView>

    <ProgressBar
        android:id="@+id/pb_loading"
        style="@android:style/Widget.Material.ProgressBar.Small"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/blue"
        android:visibility="gone" />

</RelativeLayout>
