                    android:text="充值留言: "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_rechargeremark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
